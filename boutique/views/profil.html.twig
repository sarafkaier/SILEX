{% extends 'layout.html.twig' %}

  {% block content %}
      <h1>Profil de {{ membre.pseudo }} </h1>

      <div class="profil">
        <p>Bonjour {{ membre.pseudo }} !! </p><br>

        <div class="profil_img">
          {% if membre.photo is defined %}
          <img src="{{ asset('/photo/' ~ membre.photo) }}">
          {% endif %}
          <img src="{{ asset('/photo/default.jpg') }}">
        </div>

        <div class="profil_infos">
          <ul>
              <li>Pseudo : <b>{{ membre.pseudo }}</b></li>
              <li>Prénom : <b>{{ membre.prenom }}</b></li>
              <li>Nom : <b>{{ membre.nom }}</b></li>
              <li>Email : <b>{{ membre.email }}</b></li>
            </ul>
        </div>
        <div class="profil_adresse">
          <ul>
              <li>Adresse : <b>{{ membre.adresse }}</b></li>
              <li>Code postal : <b>{{ membre.code_postal }}</b></li>
              <li>Ville : <b>{{ membre.ville }}</b></li>
            </ul>
        </div>
      </div>

      <div class="profil">
        <h2>Détails des commandes</h2><br>
        <p>Vous n'avez pas encore passé de commande !</p><br>Vener visitez <a href="boutique.php"><u>notre boutique</u></a>
      </div>
</body>
</html>
{% endblock %}
